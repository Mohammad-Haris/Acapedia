@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
        <a asp-area="" asp-page="/Account/Manage/Index" title="Manage" id="login-user-info">Hello @UserManager.GetUserName(User)!</a>
    </form>
}
else
{    
    <a asp-area="" asp-page="/Account/Login" id="login-user-info">Log In</a>
}